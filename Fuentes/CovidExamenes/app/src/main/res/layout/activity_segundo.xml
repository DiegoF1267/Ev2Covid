<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".SegundoActivity">




    <include layout="@layout/toolbar"></include>



    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Lista de Pacientes"
    android:textSize="@dimen/titulo_app_size"
    android:layout_weight="1"
    android:textColor="@color/colorPrimaryDark"></TextView>





    <ListView
        android:id="@+id/pacientes_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="20dp"
        android:contentDescription="jeje"
        android:src="@drawable/mas"></com.google.android.material.floatingactionbutton.FloatingActionButton>


</LinearLayout>