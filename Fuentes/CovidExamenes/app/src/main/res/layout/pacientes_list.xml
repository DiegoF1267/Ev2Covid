<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/nombre_pc_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="15dp"
            android:textSize="20dp"></TextView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/magin_top_lv"
        android:orientation="horizontal">

        <TextView
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Apellido:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/apellido_pc_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:layout_marginRight="15dp"
            android:textSize="20dp"></TextView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/magin_top_lv"
        android:orientation="horizontal">

        <TextView
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rut Paciente:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/rut_pc_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:layout_marginRight="15dp"
            android:textSize="20dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/magin_top_lv"
        android:orientation="horizontal">

        <TextView
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fecha Examen:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/fecha_pc_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="15dp"
            android:gravity="center_horizontal"
            android:textSize="20dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/simbolo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            ></ImageView>
    </LinearLayout>


</LinearLayout>
